{
  "name": "gruff",
  "version": "1.0.0",
  "description": "Entity-Relationship Graph Database with Versioning on Cloudflare Workers + D1",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "migrate:local": "node scripts/migrate.js --local",
    "migrate:remote": "node scripts/migrate.js --remote",
    "seed:local": "node scripts/seed.js --local",
    "seed:remote": "node scripts/seed.js --remote",
    "db:setup:local": "node scripts/migrate.js --local --seed",
    "db:setup:remote": "node scripts/migrate.js --remote --seed",
    "db:reset:local": "rm -rf .wrangler/state/ && node scripts/migrate.js --local --seed",
    "db:reset:test": "rm -rf .wrangler/test-state/",
    "db:create:local": "wrangler d1 execute gruff-db --local --command='SELECT 1'",
    "test": "node test-runner.js",
    "test:watch": "nodemon test-runner.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "graph-database",
    "cloudflare-workers",
    "d1",
    "versioning"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.6",
    "@cloudflare/workers-types": "^4.20260123.0",
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.60.0"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "@scalar/hono-api-reference": "^0.9.36",
    "hono": "^4.11.5",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
